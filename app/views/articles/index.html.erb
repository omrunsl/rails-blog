<h1>Article Listesi</h1>
<p>
<%= link_to "Yeni Article Oluştur", new_article_path %>
</p>

<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Düzenle', edit_article_path(article) %></td>
      <td><%= link_to 'Göster', article_path(article) %></td>
      <td><%= link_to 'Sil', article_path(article), method: :delete, data: {confirm: 'Emin misiniz?'} %></td>
    </tr>
  <% end %>
</table>