<h1 align="center"> Kayıt Ol Sayfası </h1>
<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role:"form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :username, value: "Kullanıcı Adı" %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :username, class: "form-control", placeholder: "Kullanıcı adı", autofocus:true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email, value: "Email" %>
        </div>
        <div class="col-sm-10">
          <%= f.email_field :email,   class: "form-control", placeholder: "Email" %>
        </div>
      </div>
      <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :password, value: "Şifre" %>
      </div>
      <div class="col-sm-10">
        <%= f.password_field :password,   class: "form-control", placeholder: "Şifre" %>
      </div>
    </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg', value: "KAYIT OL" %>
        </div>
      </div>
    <% end %>
  </div>
</div>